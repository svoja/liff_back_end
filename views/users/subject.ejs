<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css">
</head>
<body>
  <div class="container my-5">
    <!-- Subject Details -->
    <div class="text-center mb-4">
      <h1 class="display-4"><%= subject.name %></h1>
      <p class="lead"><%= subject.description %></p>
    </div>

    <!-- Packages for this Subject -->
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h2 class="h4">Packages for <%= subject.name %></h2>
      </div>
      <div class="card-body">
        <% if (subject.packages && subject.packages.length > 0) { %>
          <form action="/path-to-submit" method="post">
            <ul class="list-group">
              <% subject.packages.forEach(package => { %>
                <li class="list-group-item d-flex justify-content-between align-items-start">
                  <div class="form-check">
                    <input 
                      class="form-check-input" 
                      type="radio" 
                      id="package<%= package.id %>" 
                      name="selectedPackage" 
                      value="<%= package.id %>">
                    <label class="form-check-label ms-2" for="package<%= package.id %>">
                      <h5 class="fw-bold mb-1"><%= package.name %></h5>
                      <p class="mb-1"><strong>Price:</strong> $<%= package.price %></p>
                      <p class="mb-0"><%= package.description %></p>
                    </label>
                  </div>
                </li>
              <% }) %>
            </ul>
            <div class="mt-3 text-end">
              <button type="submit" class="btn btn-primary">Submit Selected Package</button>
            </div>
          </form>
        <% } else { %>
          <p class="text-muted">No packages available for this subject.</p>
        <% } %>
      </div>
    </div>

    <!-- Link Back to All Subjects -->
    <div class="mt-4">
      <a href="/" class="btn btn-secondary">Back to all subjects</a>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
