<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-3">
        <div class="row">
            <% subjects.forEach(function(subject) { %>
                <div class="col-12 col-md-4">
                    <div class="card mb-3" data-bs-toggle="modal" data-bs-target="#<%= subject.id %>Modal">
                        <!-- Subject Image (Placeholder if not available) -->
                        <% if (subject.img_url) { %>
                            <img src="<%= subject.img_url %>" class="card-img" alt="<%= subject.name %>">
                        <% } else { %>
                            <div class="card-placeholder">
                                <p>No Image</p>
                            </div>
                        <% } %>
    
                        <div class="card-img-overlay">
                            <h1 class="card-title text-white"><%= subject.name %></h1>
                            <footer class="position-absolute bottom-0 start-0 w-100 p-2">
                                <% if (subject.packages && subject.packages.length > 0) { %>
                                    <% subject.packages.forEach(function(package) { %>
                                        <span class="badge text-bg-primary">
                                            <%= package.description %>
                                        </span>
                                    <% }); %>
                                <% } else { %>
                                    <span class="badge text-bg-danger">ไม่พบแพ๊กเกจ</span>
                                <% } %>
                            </footer>
                        </div>
                        
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
