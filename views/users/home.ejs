<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
</head>
<body>
    <div class="container my-5">
        <h1 class="mb-5">รายการคอร์ส</h1>

        <!-- Subjects Section -->
        <div class="row">
            <% subjects.forEach(function(subject) { %>
                <div class="col-12 col-md-6 mb-3">
                    <h3><%= subject.name %></h3>
                    
                    <!-- Available Packages for each subject -->
                    <h5>Available Packages:</h5>
                    <% if (subject.packages && subject.packages.length > 0) { %>
                        <ul class="list-group">
                            <% subject.packages.forEach(function(package) { %>
                                <li class="list-group-item">
                                    <%= package.name %> - <%= package.price %> บาท
                                </li>
                            <% }); %>
                        </ul>
                    <% } else { %>
                        <p>No packages available for this subject.</p>
                    <% } %>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>